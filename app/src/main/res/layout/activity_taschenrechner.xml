<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TextView
        android:id="@+id/nachricht"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:text="Taschenrechner"
        android:textSize="14pt"
        android:paddingTop="10dp"
        />

    <TextView
        android:id="@+id/rechnung"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:singleLine="true"
        android:textSize="18pt"
        android:inputType="none"
        />


    <TextView
        android:id="@+id/ergebnis"
        android:layout_width="fill_parent"
        android:layout_height="85dp"
        android:paddingTop="10dp"
        android:paddingBottom="8dp"
        android:textSize="24pt"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/klammerAuf"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="60dp"
            android:textSize="16pt"
            android:text="("
            />

        <Button
            android:id="@+id/klammerZu"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="60dp"
            android:textSize="16pt"
            android:text=")"
            />

        <Button
            android:id="@+id/enter"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="60dp"
            android:textSize="16pt"
            android:text="E"
            />

        <Button
            android:id="@+id/clear"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="60dp"
            android:textSize="16pt"
            android:text="C"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/seven"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="60dp"
            android:textSize="16pt"
            android:text="7"
            />

        <Button
            android:id="@+id/eight"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="60dp"
            android:textSize="16pt"
            android:text="8"
            />

        <Button
            android:id="@+id/nine"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="60dp"
            android:textSize="16pt"
            android:text="9"
            />

        <Button
            android:id="@+id/addition"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="60dp"
            android:textSize="16pt"
            android:text="+"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/four"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="60dp"
            android:textSize="16pt"
            android:text="4"
            />

        <Button
            android:id="@+id/five"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="60dp"
            android:textSize="16pt"
            android:text="5"
            />

        <Button
            android:id="@+id/six"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="60dp"
            android:textSize="16pt"
            android:text="6"
            />

        <Button
            android:id="@+id/subtraktion"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="60dp"
            android:textSize="16pt"
            android:text="-"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/one"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="60dp"
            android:textSize="16pt"
            android:text="1"
            />

        <Button
            android:id="@+id/two"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="63dp"
            android:textSize="16pt"
            android:text="2"
            />

        <Button
            android:id="@+id/three"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="60dp"
            android:textSize="16pt"
            android:text="3"
            />

        <Button
            android:id="@+id/multiplikation"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="60dp"
            android:textSize="16pt"
            android:text="*"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/komma"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="60dp"
            android:textSize="16pt"
            android:text="."
            />

        <Button
            android:id="@+id/zero"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="60dp"
            android:textSize="16pt"
            android:text="0"
            />

        <Button
            android:id="@+id/gleich"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="60dp"
            android:textSize="16pt"
            android:text="="
            />

        <Button
            android:id="@+id/division"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="60dp"
            android:textSize="16pt"
            android:text="/"
            />

    </LinearLayout>

</LinearLayout>